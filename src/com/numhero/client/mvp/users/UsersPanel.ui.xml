<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:nhiw="urn:import:com.numhero.client.mvp.users"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui" ui:defaultLocale="en"
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateFilename="ProductsPanel" ui:generateLocales="default">

    <gwt:VerticalPanel width="100%">

        <gwt:HorizontalPanel width="100%">

            <gwt:cell width="50%" verticalAlignment="ALIGN_MIDDLE">
                <gwt:HTML ui:field="hdTitle"/>
            </gwt:cell>

            <gwt:cell width="50%" horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE">
                <gwt:Anchor styleName="inh-button" href="#user">
                    <ui:msg key="productService.create">Create a User</ui:msg>
                </gwt:Anchor>
            </gwt:cell>

        </gwt:HorizontalPanel>

        <nhiw:UsersTable styleName="productsDetails inh-standard" ui:field="usersTable"/>

    </gwt:VerticalPanel>

</ui:UiBinder>
