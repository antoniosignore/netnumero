<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwtdate="com.google.gwt.user.datepicker.client" xmlns:nhw="urn:import:com.numhero.client.widget"
             xmlns:nhiw="urn:import:com.numhero.client.mvp.task"
             xmlns:nhwtb="urn:import:com.numhero.client.widget.textbox"
             xmlns:nhcsw="urn:import:com.numhero.client.mvp.clientsupplier"
             xmlns:nhcb="urn:import:com.numhero.client.widget.combobox"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             ui:defaultLocale="en" ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateFilename="TaskPanel" ui:generateLocales="default">


    <gwt:HTMLPanel styleName="formContainer">

        <gwt:DisclosurePanel ui:field="errorsPanel"
                             styleName="validation-advice">
            <gwt:header>Errors</gwt:header>
        </gwt:DisclosurePanel>

        <gwt:HTMLPanel styleName="form-with-shadow">
            <table class="formContainer" cellpadding="0" cellspacing="0"
                   width="100%">
                <thead>
                    <tr>
                        <td colspan="6">
                            <ui:msg key="task.details">Task Details</ui:msg>
                        </td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="name">Name</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem">
                            <gwt:TextBox ui:field="name"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="description">Description</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem">
                            <gwt:TextBox ui:field="description"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="currency">Currency</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem">
                            <nhcb:CurrencySelect ui:field="cbCurrency"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="time.unit">Time Unit</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem">
                            <nhcb:TimeUnitComboBox ui:field="timeUnit"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="billing.rate">Billing Rate</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem">
                            <nhwtb:NumberTextBox ui:field="billingRate"/>
                        </td>
                    </tr>
                    <tr>
                        <td class="form-item-label">
                            <gwt:Label>
                                <ui:msg key="billable">Billable</ui:msg>
                            </gwt:Label>
                        </td>
                        <td class="formItem">
                            <gwt:CheckBox ui:field="billable"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </gwt:HTMLPanel>

        <gwt:HorizontalPanel styleName="buttonsPanel">
            <nhw:NetNumeroButton ui:field='btSave'>
                <ui:msg key="task.save">Save</ui:msg>
            </nhw:NetNumeroButton>
            <nhw:NetNumeroButton ui:field="btCancel">
                <ui:msg key="task.cancel">Cancel</ui:msg>
            </nhw:NetNumeroButton>
        </gwt:HorizontalPanel>

    </gwt:HTMLPanel>

</ui:UiBinder>
